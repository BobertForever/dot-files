reset_style='\[\033[00m\]'
status_style=$reset_style'\[\033[0;90m\]' # gray color; use 0;37m for lighter color
prompt_style=$reset_style
command_style=$reset_style'\[\033[0;29m\]' # bold black

fancy_style_other="$status_style$prompt_style\[\033[38;5;118m\]\h \[\033[38;5;120m\]\W \[\033[38;5;122m\]\[\033[38;5;123m\]‚ù± $command_style"
fancy_style_home="$status_style$prompt_style\[\033[38;5;39m\]\h \[\033[38;5;37m\]\W \[\033[38;5;35m\]\[\033[38;5;40m\]‚ù± $command_style"
bland_style="$status_style"'$fill'" \t\n$prompt_style\h \W> $command_style"
# other candidates for prelude characters: ùÑû‚ù±‚û™‚ñ∂‚ä≥‚à¨‚ö°

# a more compatible PS1 for agetty terminal
if [[ $TERM != *256color ]]; 
    then PS1=$bland_style
else 
    if [[ $(cat /etc/hostname) =~ Astraeus ]]; then
        PS1=$fancy_style_home
    else    		
        PS1=$fancy_style_other
    fi
fi

# a more distinguished root style
if [[ $(id -u) == 0 ]];
    then PS1="$status_style"'$fill'" \t\n$prompt_style\[\033[1;31m\]\h \W # $command_style"
fi

# Reset color for command output
# (this one is invoked every time before a command is executed):
trap 'echo -ne "\033[0m"' DEBUG



