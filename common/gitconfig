[merge]
  tool = vimdiff
[core]
  editor = vim
	excludesfile = ~/.gitignore_global
[alias]
  st = status
  ci = commit
  co = checkout
  stashco = checkout stash@{0} -- 
  vimdiff = difftool -y -t vimdiff
  ls = log --stat --abbrev-commit
  tree = log --graph --decorate --pretty=oneline --abbrev-commit
[color]
  branch = auto
  interactive = auto
  status = auto
  diff = auto
[diff]
  tool = vimdiff
[push]
  default = simple
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[commit]
  gpgsign = true
